---
import '../../scss/page.scss'
import Navbar from '../components/Navbar.astro'
import SkillsContainer from '../components/SkillsContainer.astro'
import ScrollIcon from '../components/ScrollIcon.astro'
import Footer from '../components/Footer.astro'
import Tagline from '../components/Tagline.astro'
import AboutMe from '../components/AboutMe.astro'
---

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ed Heaver</title>
        <link rel="shortcut icon" href="./static/play.png" type="image/x-icon">
        <script defer src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" integrity="sha384-9/D4ECZvKMVEJ9Bhr3ZnUAF+Ahlagp1cyPC7h5yDlZdXs4DQ/vRftzfd+2uFUuqS" crossorigin="anonymous"></script>
    </head>
    <body>
        <Navbar />
        <main>
            <section class="min-vh-70 o-hidden d-flex flex-column justify-content-center h-100" id="landing">
                <div class="container text-light text-center">
                    <Tagline />
                    <ScrollIcon />
                </div>
            </section>

            <section id="about_me" class="text-center py-5 m-3">
                <div class="container-lg">
                    <div class="row justify-content-center">
                        <div class="col-lg-12 col-sm-12">
                            <h2 class="display-4 fw-bolder">A bit more about me</h2>
                        </div>
                    </div>
                </div>
            </section>

            <section class="panel content">
                <div class="container">
                    <AboutMe />
                </div>
                <SkillsContainer />
            </section>
        </main>

        <Footer />

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        <!-- <script src="index.js"></script> -->
    </body>
</html>
